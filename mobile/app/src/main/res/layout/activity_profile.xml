<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_sky"
    tools:context="br.com.dreambox.activity.ProfileActivity">

    <include layout="@layout/clouds_layout" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/avatar_margin"
        android:src="@drawable/avatar_4"
        app:layout_heightPercent="45%"
        app:layout_widthPercent="45%" />

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_avatar"
        android:gravity="center"
        android:text="Leonardo Sibela"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/user_location_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_nickname"
        android:gravity="center"
        android:text="7 anos, Mogi Guaçu - SP"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/user_foundation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_location_age"
        android:gravity="center"
        android:text="Instituição do User"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

</android.support.percent.PercentRelativeLayout>