<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_activity_margin"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/card_detail"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sonhador "
                android:paddingTop="24dp"
                android:paddingLeft="16dp"
                android:textSize="24sp"
                android:id="@+id/name_dreamer"/>

            <TextView
                android:id="@+id/title_dream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo sonho"
                android:paddingTop="12dp"
                android:paddingLeft="16dp"
                android:layout_below="@id/name_dreamer"
                />

            <ImageView
                android:id="@+id/image_dreamer"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/avatar_1"
                android:layout_toRightOf="@id/name_dreamer"
                android:paddingLeft="80dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description_dream"
                android:layout_below="@id/title_dream"
                android:layout_alignBaseline="@id/image_dreamer"
                android:text="Só uma pequena descrição lalalalalalaasldjasd asdjsaldjaslkdj laskdjsakl jaskldj asldkj salk js"
                android:paddingLeft="16dp"
                android:paddingTop="30dp"/>

            <ImageButton
                android:id="@+id/follow_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_dream"
                android:layout_marginLeft="16dp"
                android:marginTop="16dp"
                android:src="@drawable/ic_heart_outline"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
