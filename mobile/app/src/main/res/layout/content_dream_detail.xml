<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_dream_detail"
    tools:context="br.com.dreambox.activity.DreamDetail">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/edit_margin">

    <TextView
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Título: "
        android:textSize="24dp"/>

    <TextView
        android:textSize="21dp"
        android:layout_marginLeft="21dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganhar uma bike irada"/>

</LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/edit_margin">

    <TextView
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Descrição: "
        android:textSize="24dp"/>

    <TextView
        android:textSize="21dp"
        android:layout_marginLeft="21dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que seja da caloi please Preenchendo texto pra essa parada lalalala"/>

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/edit_margin">

    <TextView
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Sonhador: "
        android:textSize="24dp"/>

    <TextView
        android:textSize="21dp"
        android:layout_marginLeft="21dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr. Anonimo"/>

</LinearLayout>





</LinearLayout>